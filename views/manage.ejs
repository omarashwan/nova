<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Cars</title>
    <link rel="stylesheet" href="/stylee.css" />
  </head>
  <body>
    <main class="main-content">
      <h1 class="page-title">Manage Cars</h1>

      <% if (cars.length === 0) { %>
      <p class="empty-msg">No cars found.</p>
      <% } else { %>
      <table class="car-table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Car Name</th>
            <th>Type</th>
            <th>Price/Day</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% cars.forEach(car => { %>
          <tr>
            <td>
              <img src="/uploads/<%= car.imagePath %>" alt="<%= car.name %>" />
            </td>
            <td><%= car.name %></td>
            <td><%= car.type %></td>
            <td>$<%= car.dailyPrice %></td>
            <td>
              <a href="/admin/cars/edit/<%= car._id %>">Edit</a>
              <form
                action="/cars/delete/<%= car._id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this car?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>
    </main>
  </body>
</html>
